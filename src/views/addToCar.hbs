<div class="container">
    <h1 class="center">Agregar Producto</h1>
    <form action="http://localhost:8080/carrito" method="post">
        <div class="form-group row">
            <label for="nombre" class="col-sm-2 col-form-label">nombre</label>
            <input type="text" class="col-sm-10" id="nombre" name="nombre" value="{{nombre}}">
        </div>
        <div class="form-group row">
            <label for="descripcion" class="col-sm-2 col-form-label">Descripcion </label>
            <input type="text" class="col-sm-10" name="descripcion" id="descripcion" value="{{descripcion}}">
        </div>
        <div class="form-group row">
            <label for="categoria" class="col-sm-2 col-form-label">categoria</label>
            <input type="text" class="form-control-file col-sm-10" id="categoria" name="categoria" value="{{categoria}}">
        </div>
        <div class="form-group row">
            <label for="codigo" class="col-sm-2 col-form-label">Codigo del Producto</label>
            <input type="text" class="form-control-file col-sm-10" id="codigo" name="codigo" value="{{codigo}}">
        </div>
        <div class="form-group row">
            <label for="foto" class="col-sm-2 col-form-label">Foto del Producto</label>
            <input type="text" class="form-control-file col-sm-10" id="foto" name="foto" value="{{foto}}">
        </div>
        <div class="form-group row">
            <label for="precio" class="col-sm-2 col-form-label">Precio del Producto</label>
            <input type="text" class="form-control-file col-sm-10" id="precio" name="precio" value="{{precio}}">
        </div>
        <div class="form-group row">
            <label for="stock" class="col-sm-2 col-form-label">Stock</label>
            <input type="number" class="form-control-file col-sm-10" id="stock" name="stock" value="{{stock}}">
        </div>
        <button type="submit" class="btn btn-primary">Agregar</button>
    </form>
</div>